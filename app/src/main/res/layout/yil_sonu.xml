<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <EditText
        android:id="@+id/yil_içi_ort"
        android:layout_width="311dp"
        android:layout_height="38dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginTop="36dp"
        android:ems="10"
        android:hint="Yıl İçi Ortalamanız:"
        android:inputType="numberDecimal"
        app:layout_constraintHorizontal_bias="0.438"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:layout_constraintLeft_creator="1"
        tools:layout_constraintRight_creator="1"
        tools:layout_constraintTop_creator="1"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp" />

    <EditText
        android:id="@+id/yeterlilik_sinavi"
        android:layout_width="309dp"
        android:layout_height="41dp"
        android:layout_marginLeft="27dp"
        android:layout_marginRight="8dp"
        android:layout_marginStart="27dp"
        android:layout_marginTop="21dp"
        android:ems="10"
        android:hint="Yılsonu Yeterlilik Sınavı Notunuz:"
        android:inputType="numberDecimal"
        app:layout_constraintHorizontal_bias="0.135"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/yil_içi_ort"
        tools:layout_constraintLeft_creator="1"
        tools:layout_constraintTop_creator="1"
        android:layout_marginEnd="8dp" />

    <Button
        android:id="@+id/hesapla"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="hesapla"
        app:layout_constraintBaseline_toBaselineOf="@+id/temizle"
        tools:layout_constraintBaseline_creator="1"
        tools:layout_constraintLeft_creator="1"
        android:layout_marginLeft="58dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginStart="58dp" />

    <Button
        android:id="@+id/temizle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="temizle"
        tools:layout_constraintTop_creator="1"
        android:layout_marginStart="60dp"
        tools:layout_constraintLeft_creator="1"
        android:layout_marginTop="32dp"
        app:layout_constraintTop_toBottomOf="@+id/yeterlilik_sinavi"
        android:layout_marginRight="58dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toRightOf="@+id/hesapla"
        android:layout_marginLeft="60dp"
        android:layout_marginEnd="58dp" />

    <TextView
        android:id="@+id/banner"
        android:layout_width="167dp"
        android:layout_height="43dp"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="20dp"
        android:text="Yıl sonu başarı notunuz: "
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@+id/sonuc"
        app:layout_constraintTop_toBottomOf="@+id/hesapla"
        android:layout_marginStart="8dp" />

    <TextView
        android:id="@+id/last"
        android:layout_width="137dp"
        android:layout_height="52dp"
        android:layout_marginBottom="132dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginTop="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/banner"
        app:layout_constraintHorizontal_bias="0.502"
        app:layout_constraintVertical_bias="0.0"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp" />

    <TextView
        android:id="@+id/sonuc"
        android:layout_width="78dp"
        android:layout_height="43dp"
        android:layout_marginRight="62dp"
        android:layout_marginTop="18dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/temizle"
        android:layout_marginEnd="62dp" />

    <LinearLayout
        android:id="@+id/ad"
        android:layout_width="358dp"
        android:layout_height="97dp"
        android:layout_marginBottom="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"></LinearLayout>

</android.support.constraint.ConstraintLayout>