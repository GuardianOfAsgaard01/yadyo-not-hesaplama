<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <EditText
        android:id="@+id/a1"
        android:layout_width="160dp"
        android:layout_height="50dp"
        android:ems="10"
        android:hint="1. Achievement"
        android:inputType="numberDecimal"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginLeft="11dp"
        android:layout_marginTop="11dp"
        android:layout_marginStart="11dp" />

    <EditText
        android:id="@+id/p1"
        android:layout_width="160dp"
        android:layout_height="50dp"
        android:ems="10"
        android:hint="1. Portfolyo + Quiz"
        android:inputType="numberDecimal"
        app:layout_constraintLeft_toRightOf="@+id/a1"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="11dp"
        app:layout_constraintHorizontal_bias="0.509"
        android:layout_marginRight="11dp"
        android:layout_marginEnd="11dp" />

    <EditText
        android:id="@+id/a2"
        android:layout_width="160dp"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="2. Achievement"
        android:inputType="numberDecimal"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/a1"
        android:layout_marginLeft="11dp"
        android:layout_marginTop="11dp"
        android:layout_marginStart="11dp" />

    <EditText
        android:id="@+id/p2"
        android:layout_width="160dp"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="2. Portfolyo + Quiz"
        android:inputType="numberDecimal"
        app:layout_constraintLeft_toRightOf="@+id/a2"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/p1"
        android:layout_marginTop="11dp"
        android:layout_marginRight="11dp"
        android:layout_marginEnd="11dp" />

    <EditText
        android:id="@+id/a3"
        android:layout_width="160dp"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="3. Achievement"
        android:inputType="numberDecimal"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/a2"
        android:layout_marginLeft="11dp"
        android:layout_marginTop="11dp"
        android:layout_marginStart="11dp" />

    <EditText
        android:id="@+id/p3"
        android:layout_width="160dp"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="3. Portfolyo + Quiz"
        android:inputType="numberDecimal"
        app:layout_constraintLeft_toRightOf="@+id/a3"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/p2"
        android:layout_marginTop="11dp"
        android:layout_marginRight="11dp"
        android:layout_marginEnd="11dp" />

    <EditText
        android:id="@+id/a4"
        android:layout_width="160dp"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="4. Achievement"
        android:inputType="numberDecimal"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/a3"
        android:layout_marginLeft="11dp"
        android:layout_marginTop="11dp"
        android:layout_marginStart="11dp" />

    <EditText
        android:id="@+id/p4"
        android:layout_width="160dp"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="4. Portfolyo + Quiz"
        android:inputType="numberDecimal"
        app:layout_constraintLeft_toRightOf="@+id/a4"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/p3"
        android:layout_marginTop="11dp"
        android:layout_marginRight="11dp"
        app:layout_constraintHorizontal_bias="0.511"
        android:layout_marginEnd="11dp" />

    <Button
        android:id="@+id/hesapla"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Hesapla"
        android:layout_marginTop="18dp"
        app:layout_constraintTop_toBottomOf="@+id/a4"
        android:layout_marginLeft="16dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginStart="16dp" />

    <Button
        android:id="@+id/temizle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Temizle"
        android:layout_marginTop="18dp"
        app:layout_constraintTop_toBottomOf="@+id/p4"
        android:layout_marginRight="16dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toRightOf="@+id/hesapla"
        android:layout_marginLeft="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="16dp" />

    <TextView
        android:id="@+id/banner"
        android:layout_width="178dp"
        android:layout_height="53dp"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="8dp"
        android:text="Yıl içi başarı notunuz: "
        android:textSize="18sp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/hesapla"
        android:layout_marginStart="16dp" />

    <TextView
        android:id="@+id/sonuc"
        android:layout_width="97dp"
        android:layout_height="53dp"
        tools:layout_constraintRight_creator="1"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        tools:layout_constraintLeft_creator="1"
        app:layout_constraintLeft_toRightOf="@+id/banner"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="12dp"
        app:layout_constraintTop_toBottomOf="@+id/temizle"
        app:layout_constraintHorizontal_bias="0.506" />

    <LinearLayout
        android:id="@+id/ad"
        android:layout_width="321dp"
        android:layout_height="70dp"
        android:layout_marginBottom="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"></LinearLayout>


</android.support.constraint.ConstraintLayout>